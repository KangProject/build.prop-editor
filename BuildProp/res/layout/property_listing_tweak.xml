<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/descriped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:contentDescription="@string/mkay"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/note_unavailable" />

    <de.bwulfert.widgets.CustomizedTextView
        android:id="@+id/key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/descriped"
        android:singleLine="true"
        android:textColor="@drawable/colors"
        android:textScaleX="0.9"
        android:textSize="20dp" />

    <de.bwulfert.widgets.CustomizedTextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/descriped"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/key"
        android:layout_toRightOf="@+id/descriped"
        android:singleLine="true"
        android:textColor="@color/main_text_lite"
        android:textScaleX="0.9"
        android:textSize="14dp" />

</RelativeLayout>